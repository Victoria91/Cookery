 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/

* {
  transition: background .5s;
  box-sizing: border-box;
}

header{
	margin:auto;
	margin-top:50px;
	height: 250px;
	width: 940px;
	background-image: url(<%= asset_path('bg.jpg')%>);
	box-shadow: 0 5px 5px grey;
  text-align: center;
  color: white;
  border-radius: 5px;
}

.meal img {
   border-radius: 5px;
   height:150px;
   width:250px;
}

.meal, .ing {
  float: left;
  display: inline;
  margin-right: 20px;
}


.search{
	margin-top: 40px;
	margin-right: 210px;
	float: right;
	color:white;
}

#new {
  float: clear both;
}

body{
	background-image: url('grid.png');
}

aside {
  height:900px;
	padding-top: 30px;
	float: left;
	padding-right: 20px;
  
  nav ul {
    padding: 0;
    margin: 0;
    box-shadow: 0 5px 5px rgba(0,0,0,.2);
    list-style: none;
  
    li a {
      text-decoration: none;
      color: #eee;
      background: #bbb;
      display: block;
      width: 140px;
      height: 40px;
      text-align: center;
      line-height: 40px;
      margin-bottom: 1px;
    }

    li a:hover {
      background: #aaa;
    }

    li a:active {
      background: #ccc;
    }
  }
 }

footer {
	margin-bottom: 20px;
	color: #444;
	text-align: center;
	border-top: 1px dashed #888;
	padding: 40px 0;
	clear: both;
	margin-top: 400px;
}

